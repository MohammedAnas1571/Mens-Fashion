              <label>
                <input type="radio" <%= index === 0 ? 'checked' : '' %> name="selectedAddress" value="<%= addressItem._id %>" class="card-input-element" />

                <div class="panel panel-default card-input">
                  <div class="panel-body">
                    <span>
                      <%= addressItem.userName %>,
                    </span>
                    <span>
