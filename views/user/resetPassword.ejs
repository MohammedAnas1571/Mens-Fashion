<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Reset Password</div>
                    <div class="card-body">
                        <form id="loginForm" action="/repassword" method="post">
                            <div class="form-group">
                                <label for="newPassword">New Password:</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your new password" required>
                                <p class="text-danger mb-2" id="password-error-message"></p>
                            </div>
                            <input type="hidden" name="id" value="<%= userId %>">
                            <div class="form-group">
                                <label for="confirmPassword">Confirm Password:</label>
                                <input type="password" class="form-control" id="confirm" placeholder="Confirm your new password" required>
                                <p class="text-danger mb-2" id="match-error-message"></p>
                            </div>
                            <button type="submit" class="btn btn-primary">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
<script>
    // Get the form element 
    const form = document.getElementById("loginForm");

    // Add a submit event listener to the form
    form.addEventListener('submit', function (event) {
      // Prevent the form from submitting by default
      event.preventDefault();

      // Validate the form inputs
      
      const password = document.getElementById('password').value;
      const confirm  = document.getElementById('confirm').value;
     

    //  if email is empty

     
        // Basic password validation (you can use a more robust regex pattern)

      
  // password is empty

  let regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
      if (!regex.test(password)) {
        document.getElementById('password-error-message').innerHTML = "Please Enter valid password by using UpperCase lowecase @ and numbers ";
        setTimeout(() => {
          document.getElementById('password-error-message').innerHTML = "";

        }, 6000);
        
        return  ;
      }
      // confirm password validation
        if (confirm == '') {
        
          document.getElementById('match-error-message').innerHTML = "Please Enter password again ";
          setTimeout(() => {
          document.getElementById('match-error-message').innerHTML = "";

        }, 6000);
        return  ; 
      }

      if(confirm != password){
        document.getElementById('match-error-message').innerHTML = "Password Mismatch ";
        setTimeout(() => {
          document.getElementById('match-error-message').innerHTML = "";

        }, 6000);
        return  ; 

      }

      form.submit()
    })
    
  </script>
</body>

</html>