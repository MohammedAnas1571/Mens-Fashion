                   flashMessage.textContent = 'Item added to cart!';
                   flashMessage.style.display = 'block'; // Show the flash message
                   setTimeout(() => {
                       flashMessage.style.display = 'none'; // Hide the flash message after a certain duration (in milliseconds)
