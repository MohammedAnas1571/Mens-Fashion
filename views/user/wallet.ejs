<%- include('../partials/user/header') %>
<%- include('../partials/user/navBar') %>
<div class="container">
    <div class="shadow p-3 mb-5 bg-body rounded text-center">
        <br>
        <h3 class="text-black">My Wallet</h3>
        <br>
    </div>
    &nbsp;    <a href="/profile" >Go Back</a>
    <div class="row">
        <div class="container d-flex justify-content-center mt-5">

            <div class="card">

                <div class="top-container">

                   
                            <div class="ml-3">
                                <h3 class="name">
                                    <%= user.userName %>
                                </h3>
                                <br>
                             
                                <h5 class="mail">
                                    <%= user.email %>
                                </h5>
                            </div>
                            <hr>
                
                                <br>
                                <br>
                                <br>


                                <!-- Default image or alternative content -->
                               

                             


                </div>


                <div class="middle-container d-flex justify-content-between align-items-center mt-3 p-2">
                    <div class="dollar-div px-3">

                        <div class="round-div"><i class="fa">&#8377;</i>
                        </i>
                        </div>

                    </div>
                    <div class="d-flex flex-column text-right mr-2">
                        <span class="current-balance">Current Balance</span>
                        <span class="amount"><span class="dollar-sign">â‚¹</span>
                           <%= user.wallet %>
                        </span>
                    </div>

                </div>

                <div class="recent-border mt-4">
                    <span class="recent-orders">Wallet history</span>
                </div>
                <div class="middle-container d-flex justify-content-between align-items-center mt-3 p-2">

                    <div class="transaction-history">
                        <table class="table">
                            <tbody>
                                <% user.walletHistory.forEach((element, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %>.</td>
                                        <td><%= element.date.toLocaleDateString() %></td>
                                        <td><span class="text-primary">Amount: <%= element.amount %></span></td>
                                        <td><%= element.message %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    



                </div>

            </div>

        </div>

    </div>
</div>




